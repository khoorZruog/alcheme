rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection: authenticated user can read/write their own doc
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Inventory subcollection
      match /inventory/{itemId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Recipes subcollection
      match /recipes/{recipeId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ===== Social features (Batch 6) =====

    // Social posts — public posts readable by any authenticated user
    match /social/posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
                    && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if request.auth != null
                            && resource.data.user_id == request.auth.uid;
    }

    // Follows — user can manage their own following list
    match /social/follows/{userId}/following/{targetId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Followers — written by the follower themselves
    match /social/follows/{userId}/followers/{followerId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == followerId;
    }

    // Likes — user can manage their own likes
    match /social/likes/{postId}/users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Comments — authenticated users can create, owners can delete
    match /social/comments/{postId}/items/{commentId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
                    && request.resource.data.user_id == request.auth.uid;
      allow delete: if request.auth != null
                    && resource.data.user_id == request.auth.uid;
    }

    // User social stats — read-only from client, write via admin SDK
    match /social/user_stats/{userId} {
      allow read: if request.auth != null;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
